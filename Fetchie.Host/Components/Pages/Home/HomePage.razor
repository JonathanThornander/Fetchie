@page "/"

<PageTitle>Home</PageTitle>

<div class="container">
    <h1>Fetchie</h1>

    <MudButton Color="Color.Primary" Variant="Variant.Filled" OnClick="SendMessage">Send Message</MudButton>

    <div class="queues-container pt-3">
        @if (!Queues.Any())
        {
            <div class="alert alert-info">No queues available.</div>
        }
        else
        {
            @foreach (var queue in Queues)
            {
                <Fetchie.Host.Components.Pages.Home.Component.QueueCard Queue="@queue" />
            }
        }
    </div>
</div>